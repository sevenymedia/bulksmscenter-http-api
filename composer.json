{
    "name": "sevenymedia/bulksmscenter-http-api",
    "description": "This repository contains the open source PHP client for the BulkSMSCenter HTTP API",
    "version": "0.1",
    "type": "library",
    "homepage": "https://github.com/sevenymedia/bulksmscenter-http-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Seveny Media",
            "email": "contact@sevenymedia.nl"
        }
    ],
    "require": {
        "php": ">=5.4",
        "guzzlehttp/guzzle": "^5.3 || ^6.1"
    },
    "require-dev": {
        "ext-openssl": "*",
        "phpunit/phpunit": "^4.8 || ^5.2",
        "vlucas/phpdotenv": "^2.2"
    },
    "autoload": {
        "files": ["src/helpers.php"],
        "psr-4": {
            "BulkSmsCenter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BulkSmsCenter\\Tests\\": "tests/"
        }
    }
}
